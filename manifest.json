{
    "manifest_version": 3,
    "name": "Boxtop Receipt Rescue",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "extension/popup/popup.html"
    },
    "icons": {
        "16": "extension/images/Poké_Ball_icon.png",
        "32": "extension/images/Poké_Ball_icon.png",
        "48": "extension/images/Poké_Ball_icon.png",
        "128": "extension/images/Poké_Ball_icon.png"
    },
    "content_scripts": [
        {
        "js": ["extension/scripts/content.js"],
        "matches": [
            "https://www.ralphs.com/*",
            "https://www.qfc.com/*",
            "https://www.fredmeyer.com/*",
            "https://www.dillons.com/*",
            "https://www.gerbes.com/*",
            "https://www.pay-less.com/*",
            "https://kroger.com/*"
        ]
        }
    ],
    "permissions": ["activeTab"]

  }